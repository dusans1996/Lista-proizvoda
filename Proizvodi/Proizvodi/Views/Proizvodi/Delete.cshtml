@model Proizvodi.Models.Proizvod

@{
    ViewData["Title"] = "Brisanje";
}
<br />
<h3>Da li ste sigurni da zelite da obrisete proizvod?</h3>
<br />
<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv
        </dt>
        <dd>
            @Model.Naziv
        </dd>
        <dt>
            Opis
        </dt>
        <dd>
            @Model.Opis
        </dd>
        <dt>
            Kategorija
        </dt>
        <dd>
            @Model.Kategorija
        </dd>
        <dt>
            Proizvodjac
        </dt>
        <dd>
            @Model.Proizvodjac
        </dd>
        <dt>
            Cena
        </dt>
        <dd>
            @Model.Cena
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obrisi" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na listu proizvoda</a>
    </form>
</div>
