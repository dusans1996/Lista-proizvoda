@model Proizvodi.Models.Proizvod

@{
    ViewData["Title"] = "Detalji";
}

<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv
        </dt>
        <dd>
            @Model.Naziv
        </dd>
        <dt>
            Opis
        </dt>
        <dd>
            @Model.Opis
        </dd>
        <dt>
            Kategorija
        </dt>
        <dd>
            @Model.Kategorija
        </dd>
        <dt>
            Proizvodjac
        </dt>
        <dd>
            @Model.Proizvodjac
        </dd>
        <dt>
            Cena
        </dt>
        <dd>
            @Model.Cena
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Promeni</a> |
    <a asp-action="Index">Nazad na listu proizvoda</a>
</div>
